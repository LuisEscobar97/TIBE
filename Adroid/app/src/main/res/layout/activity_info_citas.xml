<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sitol.tibe.turistas_citas.InfoCitas">

    <androidx.cardview.widget.CardView
        android:id="@+id/infocitasGuias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Informacion del guia:"
                android:textColor="@color/colorTextPrimary"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/fotoPerfilCitas"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_below="@id/textView15"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/nomCItas"
                android:layout_marginLeft="20dp"
                android:text="Nombre: "
                android:textColor="@color/colorTextPrimary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/nomCItas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fotoPerfilCitas"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:layout_toRightOf="@id/textView13"
                android:text="-------------"
                android:textColor="@color/colorTextPrimary"
                android:textSize="16sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/infoCitasCItas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/infocitasGuias"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:text="Infromación de cita: "
                android:textColor="@color/colorTextPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/fechaCitas"
                android:layout_marginLeft="20dp"
                android:text="Fecha: "
                android:textColor="@color/colorTextPrimary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/fechaCitas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView22"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@id/textView16"
                android:text="-------------"
                android:textColor="@color/colorTextPrimary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/textView16"
                android:layout_alignTop="@id/horaCita"
                android:text="Hora"
                android:textColor="@color/colorTextPrimary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/horaCita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fechaCitas"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@id/textView18"
                android:text="-----------"
                android:textColor="@color/colorTextPrimary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/textView18"
                android:layout_alignTop="@id/estadoCita"
                android:text="Estado: "
                android:textColor="@color/colorTextPrimary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/estadoCita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/horaCita"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@id/textView23"
                android:text="--------------"
                android:textColor="@color/colorTextPrimary"
                android:textSize="16sp" />

            <Button
                android:id="@+id/ubicacionCita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/estadoCita"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/boton_redondo_verde"
                android:text="ubicación" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/infoCitasCancelar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/infoCitasCItas"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/cancelraCitas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/boton_redondo_rojo"
                android:gravity="center_horizontal|center_vertical"
                android:text="Cancelar" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>
